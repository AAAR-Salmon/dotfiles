# do `(cd HERE; cp .zshenv.example .zshenv; ln -s "$(pwd)/.zshenv" ~/.zshenv)`
export DOTFILES="$HOME/your/dotfiles/path"
export ZDOTDIR="$DOTFILES/zsh"

export PATH="$PATH:$HOME/.local/bin"
export FPATH="$HOME/.local/share/zfunc:$FPATH"

export EDITOR="nvim"
export PAGER="less -S"

skip_global_compinit=1

# aqua
export AQUA_ROOT_DIR="$HOME/.local/share/aquaproj-aqua"
export AQUA_GLOBAL_CONFIG="$DOTFILES/aquaproj-aqua/aqua.yaml"
export PATH="$PATH:$AQUA_ROOT_DIR/bin"

source "$ZDOTDIR/.zshenv.local"
